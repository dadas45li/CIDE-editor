Public Sub SwitchButton1_Click()
  If SwitchButton1.Value
  If compiler == "g++ -o"
  TextEditor1.Highlight = "C"
  Endif
  If compiler == "gcc -o"
  TextEditor1.Highlight = "CPlusPlus"
  Endif
  TextEditor1.SelectAll
  Else
  TextEditor1.Highlight = ""
  TextEditor1.SelectAll
  Endif

  Form_Resize()
End

Public Sub Button9_Click()

  If Button9.Value
  Button9.Text = "C++"
  TextEditor1.Highlight = "CPlusPlus"
  compiler = "g++ -o"
  Else
  Button9.Text = "C"
  TextEditor1.Highlight = "C"
  compiler = "gcc -o"
  Endif
Form_Resize()
End

Public Sub Button10_Click()

  Dialog.SaveFile()
  If Dialog.Path == ""
  Message.Error("File not saved", "Ok")
  Else
  Shell "touch" & Dialog.Path
  dosya = Dialog.Path
